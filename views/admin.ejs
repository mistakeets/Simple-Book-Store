<% include partials/head %>
  <header>
    <% include partials/header %>
  </header>
  <br>
  <div class="card text-center lspace rspace">
    <form method="post" action="addBook">
      <h3 class="card-header">Add a Book</h3>
      <div class="card-block">
        <div class="form-group row">
          <label for="title-add-input" class="col-2 col-form-label">Book Title</label>
          <div class="col-10">
            <input class="form-control" type="text" name="title">
          </div>
        </div>
        <div class="form-group row">
          <label for="authorFirst-add-input" class="col-2 col-form-label">Author First Name</label>
          <div class="col-10">
            <input class="form-control" type="text" name="firstName">
          </div>
        </div>
        <div class="form-group row">
          <label for="authorLast-add-input" class="col-2 col-form-label">Author Last Name</label>
          <div class="col-10">
            <input class="form-control" type="text" name="lastName">
          </div>
        </div>
        <div class="form-group row">
          <label for="genre-add-input" class="col-2 col-form-label">Genre</label>
          <div class="col-10">
            <input class="form-control" type="text" name="genre">
          </div>
        </div>


        <button class="btn btn-success">Add Book</button>
      </div>
    </form>
  </div>

  <footer class="footer text-center">
    <% include partials/footer %>
  </footer>
